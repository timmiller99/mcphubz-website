# LLM & Credit System Configuration

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/mcphubz"
REDIS_URL="redis://localhost:6379"

# Authentication
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-here"

# LLM Providers (REQUIRED)
ANTHROPIC_API_KEY="sk-ant-api03-xxx" # For Claude models
OPENAI_API_KEY="sk-xxx" # Fallback for GPT-4

# Model Settings
DEFAULT_MODEL="OPUS_4" # Free tier default
PREMIUM_MODEL="CLAUDE_3_5" # Premium default
MAX_TOKENS_FREE=2048
MAX_TOKENS_PREMIUM=4096

# Credit System
SIGNUP_CREDITS=10 # Free credits on signup
CREDIT_PER_10K_TOKENS=1 # 10,000 tokens = 1 credit
CACHE_TTL_SECONDS=3600 # 1 hour default cache

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=500
RATE_LIMIT_PER_DAY=2000

# Stripe (for credit purchases)
STRIPE_SECRET_KEY="sk_test_xxx"
STRIPE_PUBLISHABLE_KEY="pk_test_xxx"
STRIPE_WEBHOOK_SECRET="whsec_xxx"

# Monitoring
ENABLE_USAGE_TRACKING=true
ALERT_LOW_CREDITS_THRESHOLD=5
ADMIN_EMAIL="admin@mcphubz.com"